{
  "compilerOptions": {
    "target": "es6", // configure the version standard for compiling object code
    "module": "ESnext", // configure the modularity standards used by compilation targets
    "lib": ["es6", "dom"],
    "outDir": "./dist",
    "baseUrl": "./",
    "strictNullChecks": true,
    "removeComments": true,
    "noImplicitUseStrict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
  "include": ["./index.ts"]
}
